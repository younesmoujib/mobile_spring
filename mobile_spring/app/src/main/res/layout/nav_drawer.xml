<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/cardview_shadow_start_color"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="14dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/images"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/Home"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Home"
        android:fontFamily="serif"

        android:textColor="@color/black"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/Getudiant"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Student Management"
        android:fontFamily="serif"

        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/Gfiliere"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:text="Program Management"

        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/Grole"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:text="Role Management"

        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/Arole"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:text="Role Assignment"

        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/Afetudiant"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:fontFamily="serif"
        android:text="Displaying students in a program"

        android:textColor="@color/black"
        android:textSize="22dp" />


</LinearLayout>



